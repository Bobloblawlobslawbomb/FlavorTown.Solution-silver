@{
  Layout = "_Layout";
}

@model FlavorTown.Models.Flavor

<h4>Add a new flavor:</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model=>model.Name)
  @Html.TextBoxFor(model=>model.Name)
  <hr />
  @Html.LabelFor(model=>model.Description)
  @Html.TextBoxFor(model=>model.Description)
  <hr />
  @Html.LabelFor(model=>model.FirstTasteDate)
  @Html.TextBoxFor(model=>model.FirstTasteDate, new { @class="form-control", @type="date", @required="required"})
  <hr />

  @* @Html.Label("Select Taste") @*james says, "it's best to not include a drop down for join relationships on Create or
    Edit
    routes"*@
  @*@Html.DropDownList("TasteId") *@

  <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<br>
<p>@Html.ActionLink("Show all flavors", "Index")</p>
