@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Flavor Town Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out" />
  }
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("See all treats", "Index", "Treats")</p>
  <p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
  <p>@Html.ActionLink("Add new treat", "Create", "Treats")</p>
  <p>@Html.ActionLink("Add new flavor", "Create", "Flavors")</p>

}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
}